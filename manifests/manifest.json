{
  "manifest_version": 3,
  "version": "1.0",
  "name": "MegaVPN",
  "description": "Simple vpn extension for chrome browser",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "static/icon-logo-16.png",
    "32": "static/icon-logo-32.png",
    "48": "static/icon-logo-48.png",
    "64": "static/icon-logo-64.png",
    "96": "static/icon-logo-96.png",
    "128": "static/icon-logo-128.png",
    "144": "static/icon-logo-144.png",
    "256": "static/icon-logo-256.png"
  },
  "permissions": ["storage", "proxy"]
}
